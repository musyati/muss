<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity4">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="296dp"
        android:layout_height="255dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/eBuatUsername"
        android:layout_width="430dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="BUAT USERNAME"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#0C0C0C"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.19" />

    <EditText
        android:id="@+id/eMasukSandi"
        android:layout_width="426dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="MASUKKAN KATA SANDI"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#070707"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eBuatUsername"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/eSelesai"
        android:layout_width="122dp"
        android:layout_height="68dp"
        android:hint="SELESAI"
        android:textAlignment="center"
        android:textColorHint="#FBF9F9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eMasukSandi" />

</androidx.constraintlayout.widget.ConstraintLayout>